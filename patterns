public class Main{
    public static void main(String arg[]){
        int n=5;
        for(int i=1;i<=n;i++){       //rows
            for(int j=1;j<=i;j++){   //coloums 
            System.out.print(i+" ");
            }
            System.out.println("");
        }
    }
}

